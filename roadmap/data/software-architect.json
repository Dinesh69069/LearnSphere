        "level": "advanced",
        "topics": ["Cloud Patterns", "AWS Well-Architected", "Multi-Cloud"],
        "resources": [{"name": "AWS Well-Architected", "url": "https://aws.amazon.com/architecture/well-architected/"}]
      },
      "children": [
        {
          "name": "Cloud Design Patterns",
          "id": "cloud-design-patterns",
          "meta": {
            "description": "Retry, Circuit Breaker, Bulkhead, Strangler Fig",
            "duration": "3-4 weeks",
            "level": "advanced",
            "topics": ["Retry", "Circuit Breaker", "Bulkhead", "Strangler Fig"],
            "resources": [{"name": "Cloud Patterns", "url": "https://docs.microsoft.com/azure/architecture/patterns/"}]
          }
        },
        {
          "name": "Well-Architected Frameworks",
          "id": "well-architected",
          "meta": {
            "description": "AWS/Azure Well-Architected pillars",
            "duration": "2-3 weeks",
            "level": "advanced",
            "topics": ["Reliability", "Performance", "Security", "Cost Optimization"],
            "resources": [{"name": "AWS WAF", "url": "https://aws.amazon.com/architecture/well-architected/"}]
          }
        }
