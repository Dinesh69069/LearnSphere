        "level": "advanced",
        "topics": ["REST", "GraphQL", "gRPC", "API Versioning"],
        "resources": [{"name": "API Design", "url": "https://restfulapi.net/"}]
      },
      "children": [
        {
          "name": "RESTful API Design",
          "id": "rest-api-design",
