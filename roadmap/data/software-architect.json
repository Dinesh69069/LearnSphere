    {
      "name": "Database Architecture",
      "id": "database-architecture",
      "meta": {
        "description": "SQL vs NoSQL, sharding, replication, CAP theorem",
        "duration": "6-8 weeks",
        "level": "advanced",
        "topics": ["SQL", "NoSQL", "Sharding", "Replication", "CAP Theorem"],
        "resources": [{"name": "Database Design", "url": "https://www.postgresql.org/docs/"}]
      },
      "children": [
        {
          "name": "SQL vs NoSQL",
          "id": "sql-vs-nosql",
          "meta": {
            "description": "Relational vs non-relational databases",
            "duration": "2 weeks",
            "level": "advanced",
            "topics": ["SQL", "NoSQL", "Document DB", "Key-Value"],
            "resources": [{"name": "SQL vs NoSQL", "url": "https://www.mongodb.com/nosql-explained/nosql-vs-sql"}]
          }
        },
        {
          "name": "Database Scaling",
          "id": "database-scaling",
          "meta": {
            "description": "Sharding, partitioning, replication",
            "duration": "2-3 weeks",
            "level": "advanced",
            "topics": ["Sharding", "Partitioning", "Replication", "Master-Slave"],
            "resources": [{"name": "DB Scaling", "url": "https://www.mongodb.com/basics/sharding"}]
          }
        },
        {
          "name": "CAP Theorem & ACID",
          "id": "cap-acid",
          "meta": {
            "description": "Consistency, availability, partition tolerance, ACID",
            "duration": "2 weeks",
            "level": "advanced",
            "topics": ["CAP", "ACID", "BASE", "Consistency"],
            "resources": [{"name": "CAP Theorem", "url": "https://en.wikipedia.org/wiki/CAP_theorem"}]
          }
        }
      ]
    },
    {
      "name": "Security Architecture",
      "id": "security-architecture",
      "meta": {
        "description": "Security best practices, threat modeling, defense in depth",
        "duration": "4-6 weeks",
        "level": "advanced",
        "topics": ["Security", "Threat Modeling", "Authentication", "Authorization"],
        "resources": [{"name": "Security", "url": "https://owasp.org/"}]
      },
      "children": [
        {
          "name": "Authentication & Authorization",
          "id": "auth-security",
          "meta": {
            "description": "OAuth, JWT, RBAC, ABAC",
            "duration": "2 weeks",
            "level": "advanced",
            "topics": ["OAuth", "JWT", "RBAC", "ABAC"],
            "resources": [{"name": "Auth", "url": "https://auth0.com/docs"}]
          }
        },
        {
          "name": "Threat Modeling",
          "id": "threat-modeling",
          "meta": {
            "description": "STRIDE, attack trees, security analysis",
            "duration": "2 weeks",
            "level": "advanced",
            "topics": ["STRIDE", "Attack Trees", "Threat Analysis"],
            "resources": [{"name": "Threat Modeling", "url": "https://owasp.org/www-community/Threat_Modeling"}]
          }
        }
      ]
    },
