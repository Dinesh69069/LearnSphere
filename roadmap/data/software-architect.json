            "description": "REST principles, resource design, HATEOAS",
            "duration": "2 weeks",
            "level": "advanced",
            "topics": ["REST", "Resources", "HATEOAS", "HTTP Methods"],
            "resources": [{"name": "REST API Tutorial", "url": "https://restfulapi.net/"}]
          }
        },
        {
          "name": "GraphQL & gRPC",
          "id": "graphql-grpc",
          "meta": {
            "description": "GraphQL schema, gRPC services",
            "duration": "2 weeks",
            "level": "advanced",
            "topics": ["GraphQL", "gRPC", "Protobuf"],
            "resources": [{"name": "GraphQL", "url": "https://graphql.org/"}]
          }
        }
