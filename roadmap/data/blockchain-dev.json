              }
            },
            {
              "name": "Fuzz Testing",
              "id": "fuzz-testing",
              "meta": {
                "description": "Echidna, Foundry fuzzing",
                "duration": "1 week",
                "level": "advanced",
                "topics": ["Echidna", "Foundry Fuzz", "Property Testing"],
