            "resources": [{"name": "Testing Guide", "url": "https://hardhat.org/hardhat-runner/docs/guides/test-contracts"}]
          },
          "children": [
            {
              "name": "Unit Testing",
              "id": "unit-testing-sc",
              "meta": {
                "description": "Mocha, Chai, Waffle for contract testing",
