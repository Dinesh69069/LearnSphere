{
  "name": "Blockchain Developer",
  "id": "blockchain-dev",
  "meta": {
    "description": "Complete blockchain development roadmap - smart contracts, DeFi, Web3",
    "duration": "12-15 months",
    "level": "advanced",
    "topics": ["Blockchain", "Smart Contracts", "Solidity", "Web3", "DeFi", "NFTs"],
    "resources": [
      {"name": "Ethereum.org", "url": "https://ethereum.org/en/developers/"},
      {"name": "Blockchain Roadmap", "url": "https://roadmap.sh/blockchain"}
    ]
  },
  "children": [
    {
      "name": "Blockchain Fundamentals",
      "id": "blockchain-fundamentals",
      "meta": {
        "description": "Blockchain basics, distributed ledger, consensus",
        "duration": "4-6 weeks",
        "level": "beginner",
        "topics": ["Blockchain", "Distributed Ledger", "Consensus", "Cryptography"],
        "resources": [{"name": "Blockchain Basics", "url": "https://www.blockchain.com/learning-portal"}]
      },
      "children": [
        {
          "name": "Blockchain Structure",
          "id": "blockchain-structure",
          "meta": {
            "description": "Blocks, chains, hashes, merkle trees",
            "duration": "2 weeks",
            "level": "beginner",
            "topics": ["Blocks", "Hash Functions", "Merkle Trees", "Immutability"],
            "resources": [{"name": "How Blockchain Works", "url": "https://www.blockchain.com/learning-portal/how-does-blockchain-work"}]
          }
        },
        {
          "name": "Consensus Mechanisms",
          "id": "consensus-mechanisms",
          "meta": {
            "description": "Proof of Work, Proof of Stake, consensus algorithms",
            "duration": "2 weeks",
            "level": "beginner",
            "topics": ["PoW", "PoS", "DPoS", "Byzantine Fault Tolerance"],
            "resources": [{"name": "Consensus", "url": "https://ethereum.org/en/developers/docs/consensus-mechanisms/"}]
          }
        },
        {
          "name": "Cryptography Basics",
          "id": "cryptography-blockchain",
          "meta": {
            "description": "Public key cryptography, digital signatures, hashing",
            "duration": "1-2 weeks",
            "level": "beginner",
            "topics": ["Public Key Crypto", "Digital Signatures", "SHA-256", "Elliptic Curves"],
            "resources": [{"name": "Cryptography", "url": "https://cryptobook.nakov.com/"}]
          }
        }
      ]
    },
    {
      "name": "Cryptocurrencies & Wallets",
      "id": "cryptocurrencies",
      "meta": {
        "description": "Bitcoin, Ethereum, altcoins, crypto wallets",
        "duration": "3-4 weeks",
        "level": "beginner",
        "topics": ["Bitcoin", "Ethereum", "Wallets", "Transactions", "Mining"],
        "resources": [{"name": "Bitcoin Whitepaper", "url": "https://bitcoin.org/bitcoin.pdf"}]
      },
      "children": [
        {
          "name": "Bitcoin & Cryptocurrencies",
          "id": "bitcoin",
          "meta": {
            "description": "Bitcoin protocol, transactions, mining",
            "duration": "1-2 weeks",
            "level": "beginner",
            "topics": ["Bitcoin", "UTXO", "Mining", "Transactions"],
            "resources": [{"name": "Bitcoin.org", "url": "https://bitcoin.org/"}]
          }
        },
        {
          "name": "Crypto Wallets",
          "id": "crypto-wallets",
          "meta": {
            "description": "Hot wallets, cold wallets, hardware wallets, seed phrases",
            "duration": "1 week",
            "level": "beginner",
            "topics": ["MetaMask", "Ledger", "Trezor", "Seed Phrases", "Private Keys"],
            "resources": [{"name": "MetaMask", "url": "https://metamask.io/"}]
          }
        },
        {
          "name": "Transactions & Gas",
          "id": "transactions-gas",
          "meta": {
            "description": "Transaction structure, gas fees, nonce",
            "duration": "1 week",
            "level": "beginner",
            "topics": ["Transactions", "Gas", "Nonce", "Transaction Pool"],
            "resources": [{"name": "Gas Explained", "url": "https://ethereum.org/en/developers/docs/gas/"}]
          }
        }
      ]
    },
    {
      "name": "Ethereum & EVM",
      "id": "ethereum-evm",
      "meta": {
        "description": "Ethereum blockchain, Ethereum Virtual Machine, accounts",
        "duration": "4-5 weeks",
        "level": "intermediate",
        "topics": ["Ethereum", "EVM", "Accounts", "Gas", "State"],
        "resources": [{"name": "Ethereum Docs", "url": "https://ethereum.org/en/developers/docs/"}]
      },
      "children": [
        {
          "name": "Ethereum Basics",
          "id": "ethereum-basics",
          "meta": {
            "description": "Ethereum protocol, accounts, state transitions",
            "duration": "2 weeks",
            "level": "intermediate",
            "topics": ["Ethereum", "EOA", "Contract Accounts", "State", "Nonce"],
            "resources": [{"name": "Ethereum Yellow Paper", "url": "https://ethereum.github.io/yellowpaper/paper.pdf"}]
          }
        },
        {
          "name": "EVM Fundamentals",
          "id": "evm-fundamentals",
          "meta": {
            "description": "EVM architecture, opcodes, execution",
            "duration": "2 weeks",
            "level": "advanced",
            "topics": ["EVM", "Opcodes", "Stack", "Memory", "Storage"],
            "resources": [{"name": "EVM Codes", "url": "https://www.evm.codes/"}]
          }
        },
        {
          "name": "EVM-Compatible Chains",
          "id": "evm-chains",
          "meta": {
            "description": "Polygon, BSC, Avalanche, Fantom, Arbitrum",
            "duration": "1 week",
            "level": "intermediate",
            "topics": ["Polygon", "BSC", "Avalanche", "Arbitrum", "Optimism"],
            "resources": [{"name": "L2Beat", "url": "https://l2beat.com/"}]
          }
        }
      ]
    },
    {
      "name": "Smart Contract Programming",
      "id": "smart-contract-programming",
      "meta": {
        "description": "Solidity, Vyper, Rust for smart contracts",
        "duration": "10-12 weeks",
        "level": "advanced",
        "topics": ["Solidity", "Vyper", "Rust", "Smart Contracts"],
        "resources": [{"name": "Solidity Docs", "url": "https://docs.soliditylang.org/"}]
      },
      "children": [
        {
          "name": "Solidity Programming",
          "id": "solidity",
          "meta": {
            "description": "Solidity syntax, data types, functions, modifiers",
            "duration": "6-8 weeks",
            "level": "advanced",
            "topics": ["Solidity", "Variables", "Functions", "Modifiers", "Events"],
            "resources": [{"name": "CryptoZombies", "url": "https://cryptozombies.io/"}]
          },
          "children": [
            {
              "name": "Solidity Basics",
              "id": "solidity-basics",
              "meta": {
                "description": "Data types, variables, functions, visibility",
                "duration": "2-3 weeks",
                "level": "intermediate",
                "topics": ["Data Types", "Variables", "Functions", "Visibility"],
                "resources": [{"name": "Solidity by Example", "url": "https://solidity-by-example.org/"}]
              }
            },
            {
              "name": "Advanced Solidity",
              "id": "advanced-solidity",
              "meta": {
                "description": "Inheritance, interfaces, libraries, assembly",
                "duration": "3-4 weeks",
                "level": "advanced",
                "topics": ["Inheritance", "Interfaces", "Libraries", "Assembly"],
                "resources": [{"name": "Advanced Solidity", "url": "https://docs.soliditylang.org/"}]
              }
            },
            {
              "name": "Design Patterns",
              "id": "solidity-patterns",
              "meta": {
                "description": "Common patterns, proxy patterns, upgradeable contracts",
                "duration": "1-2 weeks",
                "level": "advanced",
                "topics": ["Proxy Pattern", "Factory Pattern", "Upgradeable Contracts"],
                "resources": [{"name": "Smart Contract Patterns", "url": "https://fravoll.github.io/solidity-patterns/"}]
              }
            }
          ]
        },
        {
          "name": "Vyper Programming",
          "id": "vyper",
          "meta": {
            "description": "Pythonic smart contract language",
            "duration": "2-3 weeks",
            "level": "advanced",
            "topics": ["Vyper", "Python-like Syntax", "Security"],
            "resources": [{"name": "Vyper Docs", "url": "https://vyper.readthedocs.io/"}]
          }
        },
        {
          "name": "Rust for Blockchain",
          "id": "rust-blockchain",
          "meta": {
            "description": "Rust for Solana, Near, Polkadot",
            "duration": "2-3 weeks",
            "level": "advanced",
            "topics": ["Rust", "Solana", "Near", "Anchor Framework"],
            "resources": [{"name": "Solana Cookbook", "url": "https://solanacookbook.com/"}]
          }
        }
