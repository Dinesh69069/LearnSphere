        "level": "advanced",
        "topics": ["Ansible", "Playbooks", "Roles", "Inventory", "Automation"],
        "resources": [{"name": "Ansible Docs", "url": "https://docs.ansible.com/"}]
      },
      "children": [
        {
          "name": "Ansible Basics",
          "id": "ansible-basics",
          "meta": {
            "description": "Playbooks, tasks, modules, inventory",
            "duration": "2 weeks",
            "level": "advanced",
            "topics": ["Playbooks", "Tasks", "Modules", "Inventory", "Variables"],
