        "topics": ["Networking", "Firewalls", "VPN", "SSL/TLS", "Security"],
        "resources": [{"name": "Networking Guide", "url": "https://www.cloudflare.com/learning/"}]
      },
      "children": [
        {
          "name": "Network Security",
          "id": "network-security",
          "meta": {
            "description": "Firewalls, VPN, security best practices",
            "duration": "2 weeks",
            "level": "advanced",
            "topics": ["Firewalls", "VPN", "Security Groups", "Network ACLs"],
            "resources": [{"name": "Network Security", "url": "https://www.cloudflare.com/learning/security/what-is-network-security/"}]
          }
