        "duration": "5-6 weeks",
        "level": "advanced",
        "topics": ["Prometheus", "Grafana", "ELK", "Metrics", "Logs", "Alerting"],
        "resources": [
          {"name": "Prometheus Docs", "url": "https://prometheus.io/docs/"},
          {"name": "Grafana Docs", "url": "https://grafana.com/docs/"}
        ]
      },
      "children": [
        {
          "name": "Prometheus Metrics",
          "id": "prometheus",
          "meta": {
            "description": "Time-series database, metrics collection, PromQL",
            "duration": "2-3 weeks",
            "level": "advanced",
            "topics": ["Prometheus", "Metrics", "PromQL", "Exporters", "Service Discovery"],
            "resources": [{"name": "Prometheus Tutorial", "url": "https://prometheus.io/docs/prometheus/latest/getting_started/"}]
          },
          "children": [
            {
              "name": "Alerting with Alertmanager",
              "id": "alertmanager",
              "meta": {
                "description": "Alert rules, routing, notifications",
                "duration": "1 week",
                "level": "advanced",
                "topics": ["Alert Rules", "Alertmanager", "Routing", "Notifications"],
                "resources": [{"name": "Alerting", "url": "https://prometheus.io/docs/alerting/latest/overview/"}]
              }
            }
          ]
        },
        {
          "name": "Grafana Dashboards",
          "id": "grafana",
          "meta": {
            "description": "Visualization, dashboards, data sources",
            "duration": "1-2 weeks",
            "level": "advanced",
            "topics": ["Dashboards", "Panels", "Data Sources", "Variables"],
            "resources": [{"name": "Grafana Tutorial", "url": "https://grafana.com/tutorials/"}]
          }
        },
        {
          "name": "Log Management (ELK)",
          "id": "elk-stack",
          "meta": {
            "description": "Elasticsearch, Logstash, Kibana",
            "duration": "2 weeks",
