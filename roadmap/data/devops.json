      "name": "CI/CD Pipelines",
      "id": "cicd-pipelines",
      "meta": {
        "description": "GitHub Actions, Jenkins, GitLab CI - Automation",
        "duration": "4-5 weeks",
        "level": "advanced",
        "topics": ["GitHub Actions", "Jenkins", "CI/CD", "Automated Testing", "Deployment"],
        "resources": [{"name": "GitHub Actions", "url": "https://docs.github.com/en/actions"}]
      },
      "children": [
        {
          "name": "GitHub Actions",
          "id": "github-actions-devops",
          "meta": {
            "description": "Workflows, actions, runners, secrets",
            "duration": "2-3 weeks",
            "level": "advanced",
            "topics": ["Workflows", "Actions", "Runners", "Secrets", "Matrix"],
            "resources": [{"name": "Actions Tutorial", "url": "https://docs.github.com/en/actions/quickstart"}]
          },
          "children": [
            {
              "name": "CI Workflows",
              "id": "ci-workflows",
              "meta": {
                "description": "Build, test, code quality automation",
                "duration": "1 week",
                "level": "advanced",
                "topics": ["Build", "Test", "Linting", "Code Quality"],
                "resources": [{"name": "CI Best Practices", "url": "https://docs.github.com/en/actions/automating-builds-and-tests"}]
              }
            },
            {
              "name": "CD Workflows",
              "id": "cd-workflows",
              "meta": {
                "description": "Deployment automation, environments, approvals",
                "duration": "1-2 weeks",
                "level": "advanced",
                "topics": ["Deployment", "Environments", "Approvals", "Rollback"],
                "resources": [{"name": "CD Best Practices", "url": "https://docs.github.com/en/actions/deployment"}]
              }
            }
          ]
        }
      ]
