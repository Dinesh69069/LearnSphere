          "name": "Cloud Service Models",
          "id": "cloud-service-models",
          "meta": {
            "description": "IaaS, PaaS, SaaS explained",
            "duration": "1-2 weeks",
            "level": "beginner",
            "topics": ["IaaS", "PaaS", "SaaS", "FaaS", "Serverless"],
